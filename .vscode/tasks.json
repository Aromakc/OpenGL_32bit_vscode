{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: g++.exe build active file",
      "command": "C:\\MinGW\\bin\\g++.exe",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "-Wall",
        "${file}",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}.exe"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "compiler: C:\\MinGW\\bin\\g++.exe"
    },
    {
      "type": "shell",
      "label": "Run task",
      "command": "C:\\MinGW\\bin\\g++.exe -g -Wall ${file} -o ${fileDirname}\\${fileBasenameNoExtension}.exe ; ${fileDirname}\\bin\\${fileBasenameNoExtension}.exe",
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "detail": "compiler: C:\\MinGW\\bin\\g++.exe"
    }
  ]
}
